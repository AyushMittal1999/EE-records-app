<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    app:cardUseCompatPadding="true"
    style="@style/CardView.Light"
    app:cardCornerRadius="15sp"
    app:cardMaxElevation="1dp"
    app:cardElevation="1dp"
    android:layout_height="wrap_content">

<RelativeLayout
    android:layout_width="match_parent"
    android:background="#eeee"

    android:layout_height="match_parent">
<ImageView
    android:layout_width="45dp"
    android:layout_height="45dp"
    android:src="@drawable/round"
    android:id="@+id/img"/>

    <TextView
        android:id="@+id/itemno"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="13dp"
        android:layout_marginTop="15dp"
        android:text="0"
        android:textSize="20dp" />
    <TextView
        android:id="@+id/equipname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/img"
        android:layout_alignParentStart="true"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"

        android:drawableLeft="@drawable/right"
        android:textColor="@android:color/black"
        android:textSize="25sp"
        android:layout_marginBottom="5sp"
        android:layout_alignParentLeft="true" />

    <TextView
        android:id="@+id/equipid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/img"
        android:textSize="18sp"
         />


    <TextView
        android:id="@+id/equipprice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/dop" />



    <TextView
        android:id="@+id/lab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/equipname"
        android:text="TextView"
        android:layout_alignParentLeft="true" />

    <TextView
        android:id="@+id/dop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"

        android:layout_below="@+id/img"
        android:text="TextView" />

    <TextView
        android:id="@+id/desc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lab"
        android:layout_marginTop="5sp" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/desc"
        android:background="#000"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_below="@+id/desc"
        android:background="@android:color/darker_gray" />

    <TextView
        android:id="@+id/billnumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/equipname"
        android:layout_marginTop="-5sp"
        android:text="TextView" />

</RelativeLayout>
</android.support.v7.widget.CardView>